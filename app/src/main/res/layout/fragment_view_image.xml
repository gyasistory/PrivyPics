<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ViewImageFragment">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:src="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageView2"
            android:scaleType="fitCenter"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/descriptionText"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:src="@android:drawable/ic_media_previous"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="8dp"/>
    <ImageButton
            android:src="@android:drawable/ic_media_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            tools:layout_editor_absoluteX="355dp"
            android:id="@+id/imageButton2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:ems="10"
            android:padding="5dp"
            android:scrollbarStyle="insideOverlay"
            android:minHeight="50dp"
            android:maxHeight="100dp"
            android:id="@+id/descriptionText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            tools:text="@tools:sample/lorem/random" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>